@model List<CourseViewModel>
@{
    ViewData["Title"] = "Home Page";
    var count = 0;
}

<h2>Kurslar</h2>
<hr />

@if (Model.Any())
{
    foreach (var item in Model)
    {
        count++;

        if (count == 1 || (count % 3 == 1))
        {
            @Html.Raw("<div class='row row*cols-1 row-cols-md-3 g-4 mb-3'>")
        }
        <div class="col">
            <div class="card">
                <img class="card-img-top" src="@item.StockPictureUrl" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.ShortDescription</p>
                    <p class="card-text text-primary font-weight-bold">@item.Price TL</p>
                    <a class="btn btn-success" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">Detay</a>
                </div>
            </div>
        </div>
        if (count % 3 == 0)
        {
            @Html.Raw("</div>")
        }
    }
}